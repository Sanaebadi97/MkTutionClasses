<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/button_radius_large"
            app:cardPreventCornerOverlap="true"
            android:id="@+id/card_home"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">


            <ImageView android:layout_width="120dp"
                       android:layout_height="120dp"
                       tools:src="@mipmap/teacher"
                       android:padding="@dimen/launch_btn_padding"
                       android:layout_margin="@dimen/launch_btn_margin"
                       android:layout_gravity="center"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:id="@+id/img_home_item"
            />


            <TextView android:layout_width="match_parent"
                      tools:text="@string/teacher_title"
                      android:id="@+id/txt_home_item"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textAlignment="center"
                      android:layout_margin="@dimen/launch_btn_margin"
                      android:padding="@dimen/launch_btn_padding"
                      android:textColor="@color/input_text_color"
                      android:textSize="17sp"
                      android:layout_height="match_parent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</layout>
