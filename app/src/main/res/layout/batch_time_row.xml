<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="@dimen/button_radius_large"
        app:cardUseCompatPadding="true"
        android:id="@+id/batch_time_card"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:id="@+id/txt_time_batch_title"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:background="@color/colorAccent"
                  android:textSize="@dimen/student_info_text"
                  android:textStyle="bold"
                  android:padding="@dimen/launch_btn_padding"
                  android:textColor="@color/input_text_color"
                  tools:text="@string/morning_timing"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="match_parent"
                  android:id="@+id/txt_time_batch_one"
                  android:layout_gravity="center|left"
                  android:gravity="left|center"
                  android:background="@android:color/white"
                  tools:text="@string/morning_timing"
                  android:textColor="@color/input_text_color"
                  android:textSize="@dimen/student_info_recycler"
                  android:layout_margin="@dimen/launch_btn_margin"
                  android:padding="@dimen/launch_btn_padding"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="match_parent"
                  android:layout_gravity="center|left"
                  android:gravity="left|center"
                  android:background="@android:color/white"
                  android:textColor="@color/input_text_color"
                  android:textSize="@dimen/student_info_recycler"
                  android:layout_margin="@dimen/launch_btn_margin"
                  android:padding="@dimen/launch_btn_padding"
                  android:id="@+id/txt_time_batch_two"
                  tools:text="@string/morning_timing"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>