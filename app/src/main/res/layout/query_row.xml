<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/button_radius_large"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/card_query_list"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_student_name"
                  tools:text="Sana Ebadi"
                  android:textColor="@color/input_text_color"
                  android:textSize="20sp"
                  android:gravity="center"
                  android:layout_alignParentStart="true"
                  android:layout_margin="@dimen/launch_btn_margin"
                  android:padding="@dimen/launch_btn_padding"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/txt_query_message"
                  android:textColor="@color/input_text_color"
                  android:textSize="18sp"
                  android:gravity="center|start"
                  android:layout_below="@+id/txt_student_name"
                  android:layout_alignParentStart="true"
                  android:layout_margin="@dimen/launch_btn_margin"
                  android:padding="@dimen/launch_btn_padding"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>