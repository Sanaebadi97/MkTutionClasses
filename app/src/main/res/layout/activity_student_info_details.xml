<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.StudentInfoDetails">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/student"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="130dp"
                android:id="@+id/img_student_profile"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/launch_btn_padding"
                  android:textSize="24sp"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/input_text_color"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/img_student_profile"
                  android:layout_margin="@dimen/launch_btn_margin"
                  tools:text="name"
                  android:textIsSelectable="true"
                  android:id="@+id/txt_stu_name"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/launch_btn_padding"
                  android:textSize="@dimen/student_info_recycler"
                  android:textColor="@color/input_text_color"
                  android:layout_margin="@dimen/launch_btn_margin"
                  app:layout_constraintTop_toBottomOf="@id/txt_stu_name"
                  tools:text="name"
                  android:textIsSelectable="true"
                  android:id="@+id/txt_stu_start_date"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/launch_btn_padding"
                  android:textSize="@dimen/student_info_recycler"
                  android:textColor="@color/input_text_color"
                  android:layout_margin="@dimen/launch_btn_margin"
                  tools:text="name"
                  android:textIsSelectable="true"
                  app:layout_constraintTop_toBottomOf="@id/txt_stu_start_date"
                  android:id="@+id/txt_stu_fee_due"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/launch_btn_padding"
                  android:textSize="@dimen/student_info_recycler"
                  android:textColor="@color/input_text_color"
                  android:layout_margin="@dimen/launch_btn_margin"
                  tools:text="name"
                  android:textIsSelectable="true"
                  app:layout_constraintTop_toBottomOf="@id/txt_stu_fee_due"
                  android:id="@+id/txt_stu_fee_deposit"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/launch_btn_padding"
                  android:textSize="@dimen/student_info_recycler"
                  android:textColor="@color/input_text_color"
                  android:layout_margin="@dimen/launch_btn_margin"
                  tools:text="name"
                  android:textIsSelectable="true"
                  app:layout_constraintTop_toBottomOf="@id/txt_stu_fee_deposit"
                  android:id="@+id/txt_stu_test_report"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/launch_btn_padding"
                  android:textSize="@dimen/student_info_recycler"
                  android:textColor="@color/input_text_color"
                  android:layout_margin="@dimen/launch_btn_margin"
                  app:layout_constraintTop_toBottomOf="@id/txt_stu_test_report"
                  tools:text="name"
                  android:textIsSelectable="true"
                  android:id="@+id/txt_stu_phone_nom"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
