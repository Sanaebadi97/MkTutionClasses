<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="handler" type="sanaebadi.info.teacherhandler.activity.StudentBatchTimeActivity.MyHandlers"/>

    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:background="@color/content_bg"
            android:id="@+id/coordinator"
            android:layout_width="match_parent" android:layout_height="match_parent"
            tools:context=".activity.StudentInfoListActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:id="@+id/toolbar_lay"
                android:layoutDirection="rtl"
                android:orientation="horizontal">


            <!--Logic App info Button-->
            <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="5dp"
                    android:onClick="@{handler::onBackClick}"
                    app:srcCompat="@drawable/arrow_right"
                    tools:ignore="ContentDescription,VectorDrawableCompat"/>


            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"/>

            <!--Title page-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/batch_time_title"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_lay"
                android:layout_marginTop="?attr/actionBarSize"
                android:id="@+id/rv_batch_time"/>

    </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
